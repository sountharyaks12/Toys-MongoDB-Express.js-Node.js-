<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#1bb566">
    <title>Toy Shop</title>
    <link rel="stylesheet" href="index.css">
</head>

<body>
    <div>
        <%- include('partials/nav') %>
            <pre class="balloon2">        </pre>
            <div class="card-whole">
                <% toys.forEach(toy=> { %>
                    <div class="card">
                        <div class="card-content">
                            <h2>
                                <%= toy.name %>
                            </h2>
                            <p class="price">Price:
                                <svg xmlns="http://www.w3.org/2000/svg" id="price" height="16px"
                                    viewBox="0 -960 960 960" width="20px" fill="#000000">
                                    <path
                                        d="M549-120 280-400v-80h140q53 0 91.5-34.5T558-600H240v-80h306q-17-35-50.5-57.5T420-760H240v-80h480v80H590q14 17 25 37t17 43h88v80h-81q-8 85-70 142.5T420-400h-29l269 280H549Z" />
                                </svg>
                                <%= toy.price %>
                            </p>
                            <p>Description: <%= toy.description %>
                            </p>
                            <p>Stock: <%= toy.stock %>
                            </p>
                            <div class="buttons">
                                <button class="edit">
                                    <a href="/toys/edit/<%= toy._id %>"><svg xmlns="http://www.w3.org/2000/svg"
                                            height="18px" viewBox="0 -960 960 960" width="24px" fill="#ffffff">
                                            <path
                                                d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z" />
                                        </svg> Edit</a>
                                </button>

                                <form action="/toys/delete/<%= toy._id %>" method="post" style="display:inline;">
                                    <button type="submit">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
    </div>
    <pre class="balloon">                      </pre>
</body>

</html>